import {useState} from 'react'
import { StyleSheet, Text, View, TextInput, Button,TouchableOpacity, Image} from 'react-native';

export default function App() {
  const[nome,setNome] = useState('');
  const[nomeDigitado, setNomeDigitado] = useState('');
  const[telefoe,setTelefone] = useState ('');
  const{telefoneDigitado,setTelefoneDigitado}=useState('');

  function mostrarMsg(){
    if (nomeDigitado == '' || telefoneDigitado == '') ;
    {
      alert("Preencha todos os campos!");
    }

    setNomeDigitado(nome);
    setTelefoneDigitado(telefone);
  }

  return (
    <View style={styles.container}>

      <Image source={require('./assets/contato.jpg')}
      style={styles.imagem}>
      </Image>

      <Text style={styles.titulo}> Cadastro de pessoas </Text>
      <Text style={styles.texto}> Nome: </Text>
      <TextInput
        style={styles.input}
      placeholder="Digite seu nome aqui : "
      OnChangeText={(nome) => setNome(nome)}
      >

      </TextInput>

      <Text style={styles.telefone}>Telefone: </Text>
      <TextInput
        style={styles.input}
      placeholder="Digite seu telefone aqui : "
      OnChangeText={(telefone) => setTelefone(telefone)}
      keyboardType='numeric'
      >

      </TextInput>

<     TouchableOpacity
      style={styles.botao}
      onPress={mostrarMsg}
      >
        <Text style={styles.textobotao}>mostrar dados</Text>
      </TouchableOpacity>

      <Button
      title="Mostrar Mensagem"
      onPress={mostrarMsg}
      ></Button>

      <Text style={styles.textMsg}>  Nome digitado : {nomeDigitado}</Text>
      <Text style={styles.textMsg}>  Telefone digitado : {telefoneDigitado}</Text>

    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
    alignItems: 'center',
    justifyContent: 'center',
  },

  titulo:{
    fontSize: 30,
    fontWeight: 'bold',
    marginBottom: 20,
    color: '#333'
  },
  texto:{
    fontSize: 18,
    alignSelf:'flex-start',
    marginBottom: 5,
    color: "#444)"
  },

  textMsg:{
    fontSize: 18,
    marginTop: 15,
    fontWeight: 'bold',
    color: '#ab2244'
  },

  input:{
    width: '100%',
    height: 50,
    borderWidth:3,
    borderColor: '#6200ea',
    borderRadius: 10,
    paddingHorizontal:15,
    fontSize: 18,
    backgroundColor: '#fff',
    arginBottom:15,
  },

  botao:{
    backgroundColor:"#6200ea",
    paddingVertical:15,
    paddingHorizontal:30,
    BorderRadius: 10,
    marginTop:10,
    width:'100%',
    alignItems:'center'
  },

textobotao:{
  color:'#fff',
  fontSize: 18,
  fontWeight:'bold'
},

imagem:{
  width: 100,
  height: 100

}

});
