<h1>Comparação de peso </h1>

<?php

$nome = "Pessoa 1";
$nome2 = "Pessoa 2";
$peso = 30;
$peso2 = 40;

if($peso < $peso2){
    echo $nome2 . " é mais pesado do que " . $nome;
}

else if($peso > $peso2){
    echo $nome2 . " é mais leve que " . $nome;
}

else{
    echo $nome . " e " . $nome2 . " tem o mesmo peso";
}

?>
